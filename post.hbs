  <section class="section-padding--sm bg-white">
    <div class="post">
      <h1>{{title}}</h1>
     <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}} | Posted in: {{tags}}</time>
      <img src="{{image}}" /> 
      {{>'share'}}
      {{content}}
      <div class="tags">
      {{#if tags}}
          <h4>Posted in:<span> {{tags}}</span></h4>
      {{/if}}
      </div>
    </div>
  </section>

  <section class="section-padding bg-gray">
    <div class="container">
      <div class="clearfix subscribe-container">
        <img class="img-profile-left" src="/assets/images/charlie6.jpg" />
