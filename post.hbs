{{!< default}}

{{#post}}

<article>

  <header class="section-padding--lg mast rellax" data-rellax-speed="-4">
    <a class="nav nav--white" href="/">
      <i class="fa fa-lg fa-arrow-left"></i>
      <span>Back to home</span>
    </a>
    <figure class="absolute-bg mast__img" style="background-image: url('{{image}}');"></figure>
    <div class="mast__container">
      <h1 style="font-size:6em;">
        <img class="logo" src="/assets/images/GTT.png">
        {{!-- <span style="font-size:1.2em;">E</span>RIC<span style="text-transform:none;color:#27ae60;"><span style="font-size:1.2em;">H</span>AGEMANN</span> --}}
      </h1>

            <div class="email-sign-up"> 
        {{> "email-signup"}}
      </div>
    </div>
  </header>

  <section class="section-padding bg-grey">
    <div class="post">
      <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}}</time>
      <h1>{{title}}</h1>
      {{>'share'}}
      {{content}}
      <div class="tags">
      {{#if tags}}
          <h4>Posted in:<span> {{tags}}</span></h4>
      {{/if}}
      </div>
    </div>
  </section>

  {{#author}}
  <section class="author section-padding--sm">
    <div class="author-image">
      <img src="{{image}}">
    </div>
    <div class="author-container">
      <div class="author-name">
        <h4>{{name}}</h4>
      </div>
      <div class="author-bio">
        <p>{{bio}}</p>
      </div>
    </div>
  </section>

  {{/author}}

</article>

{{#prev_post}}
  <section class="next">
    <a class="next__link" href="{{url}}" style="background-image: url('{{image}}');">
      <div class="next__container">
        <span>Read Next</span>
        <h2>{{title}}</h2>
      </div> 
    </a>
  </section>
{{/prev_post}}

{{/post}}
